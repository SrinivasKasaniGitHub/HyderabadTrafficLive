<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/colorWhite" />
            <padding
                android:bottom="2dp"
                android:left="8dp"
                android:right="8dp"
                android:top="2dp" />
            <stroke
                android:width="0.05dp"
                android:color="@color/colorStroke" />
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorWhite"
                android:endColor="@color/colorWhite"
                android:startColor="@color/colorWhite"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/baseline_arrow_drop_down_black_36" />
    </item>
</layer-list>