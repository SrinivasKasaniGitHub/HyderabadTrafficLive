<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/colorWhite" />
            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />

            <stroke
                android:width="0dp"
                android:color="@color/colorEdtTxtBg" />

            <corners android:radius="24dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/colorEdtTxtBg"
                android:endColor="@color/colorEdtTxtBg"
                android:startColor="@color/colorEdtTxtBg"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/baseline_arrow_drop_down_black_36" />
    </item>
</layer-list>