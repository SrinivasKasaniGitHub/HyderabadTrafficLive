<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/img_vehicle_details_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_close_red" />

    <TextView
        android:id="@+id/tv_vehicle_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:text="@string/vehicle_details"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lnr_lyt_vehicle_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_vehicle_details"
        android:paddingTop="6dp"
        android:paddingBottom="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/regn_no" />

            <TextView
                android:id="@+id/tv_regn_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/owner_name" />

            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/fuel_type" />

            <TextView
                android:id="@+id/tv_fuel_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/vehicle_color" />

            <TextView
                android:id="@+id/tv_vehicle_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/maker_s_name" />

            <TextView
                android:id="@+id/tv_makers_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/mfg_year" />

            <TextView
                android:id="@+id/tv_mfg_year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/date_of_registration" />

            <TextView
                android:id="@+id/tv_date_of_registration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/chassis_no" />

            <TextView
                android:id="@+id/tv_chassis_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_rta_details_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnr_lyt_vehicle_details"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/close" />

</RelativeLayout>