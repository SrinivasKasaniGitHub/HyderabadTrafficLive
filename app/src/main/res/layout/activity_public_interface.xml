<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context=".activities.PublicInterfaceActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_home" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/toolbar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/rel_camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:contentDescription="@null"
                        android:padding="8dp"
                        android:src="@drawable/ic_camera" />

                    <TextView
                        android:id="@+id/tv_camera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_camera"
                        android:gravity="center_horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/camera"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_gallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/iv_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:contentDescription="@null"
                        android:padding="8dp"
                        android:src="@drawable/ic_gallery" />

                    <TextView
                        android:id="@+id/tv_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_gallery"
                        android:gravity="center_horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/gallery"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_display"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_gallery2"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_category"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_when_why_whom_and_how"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/when_why_whom_and_how"
                android:inputType="text"
                android:maxLines="1"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/et_phone_no"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_phone_no"
                android:inputType="phone"
                android:maxLines="1"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/et_location"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/type_location"
                android:inputType="text"
                android:maxLines="1"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tv_already_have_an_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/false_report_to_police_is_a_punishable_offence"
                android:textColor="@color/colorRed"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btn_submit"
                style="@style/button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/submit" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/footer"
        style="@style/footer_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>