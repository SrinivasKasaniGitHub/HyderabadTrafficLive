<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FAQsActivity">

    <include
        android:id="@+id/toolbar_faqs"
        layout="@layout/toolbar_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_faqs"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerViewFAQs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/faqs_recycler_view_margin_left"
            android:layout_marginStart="@dimen/faqs_recycler_view_margin_left"
            android:layout_marginRight="@dimen/faqs_recycler_view_margin_right"
            android:layout_marginEnd="@dimen/faqs_recycler_view_margin_right"
            android:scrollbars="vertical" />

    </LinearLayout>

</RelativeLayout>