<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RoadSafetyTipResultActivity">

    <include
        android:id="@+id/toolbar_road_safety_tip"
        layout="@layout/toolbar_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/road_safety_bg_lyt_height"
        android:layout_below="@id/toolbar_road_safety_tip"
        android:background="@drawable/ic_header"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/road_safety_lnr_lyt_margin_left"
        android:layout_marginLeft="@dimen/road_safety_lnr_lyt_margin_left"
        android:layout_marginTop="@dimen/road_safety_lnr_lyt_margin_top"
        android:layout_marginEnd="@dimen/road_safety_lnr_lyt_margin_right"
        android:layout_marginRight="@dimen/road_safety_lnr_lyt_margin_right"
        android:layout_marginBottom="@dimen/road_safety_lnr_lyt_margin_bottom"
        android:background="@drawable/corners_background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:paddingTop="@dimen/road_safety_scroll_view_padding_top"
            android:paddingBottom="@dimen/road_safety_scroll_view_padding_bottom"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/road_safety_lnr_lyt_padding_left"
                android:paddingLeft="@dimen/road_safety_lnr_lyt_padding_left"
                android:paddingEnd="@dimen/road_safety_lnr_lyt_padding_right"
                android:paddingRight="@dimen/road_safety_lnr_lyt_padding_right"
                android:paddingBottom="@dimen/road_safety_lnr_lyt_padding_bottom">

                <TextView
                    android:id="@+id/tv_tip_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/road_safety_tv_padding"
                    android:paddingStart="@dimen/road_safety_tv_padding"
                    android:paddingRight="@dimen/road_safety_tv_padding"
                    android:paddingEnd="@dimen/road_safety_tv_padding"
                    android:paddingBottom="@dimen/road_safety_tv_padding"
                    android:text="@string/tip_helmet"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/road_safety_logo_width"
        android:layout_height="@dimen/road_safety_logo_height"
        android:layout_below="@id/toolbar_road_safety_tip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/image_border_style"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_helmet" />

    </LinearLayout>

</RelativeLayout>