<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/img_towed_vehicle_details_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_close_red" />

    <TextView
        android:id="@+id/tv_towed_vehicle_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:text="@string/towed_vehicle_details"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lnr_lyt_towed_vehicle_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_towed_vehicle_details"
        android:paddingTop="6dp"
        android:paddingBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/regn_no" />

            <TextView
                android:id="@+id/tv_regn_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/owner_name" />

            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/detained_date" />

            <TextView
                android:id="@+id/tv_detained_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/trps_name" />

            <TextView
                android:id="@+id/tv_trps_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/location" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/officer_name" />

            <TextView
                android:id="@+id/tv_officer_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBorder"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginEnd="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/ps_contact_no" />

            <TextView
                android:id="@+id/tv_trps_contact_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="@string/na" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_lyt_towed_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_lyt_towed_vehicle_details"
        android:layout_margin="12dp"
        android:background="@drawable/layout_border_style"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_note_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="@string/please_contact_htc_room"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_towed_detials_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnr_lyt_towed_note"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/close" />

</RelativeLayout>