<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel_faqs">

    <RelativeLayout
        android:id="@+id/rel_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/faqs_rel_lyt_padding">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/question"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:textColor="@color/colorAccentDark"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <!--<ImageView
            android:id="@+id/img_plus"
            android:layout_width="@dimen/faqs_plus_img_width"
            android:layout_height="@dimen/faqs_plus_img_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_right_arrow"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_collapse_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_animation"
        android:padding="@dimen/faqs_rel_lyt_padding"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/answer"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:textColor="@color/colorBlack"
            tools:ignore="RelativeOverlap" />

        <!--<ImageView
            android:id="@+id/img_minus"
            android:layout_width="@dimen/faqs_minus_img_width"
            android:layout_height="@dimen/faqs_minus_img_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_close"/>-->

    </RelativeLayout>

</RelativeLayout>