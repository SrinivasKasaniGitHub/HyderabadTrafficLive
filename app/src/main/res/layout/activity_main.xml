<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_bg"
    tools:context=".activities.MainActivity">

    // updated new android studio on 11th Feb 2019
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/main_htp_header_text_padding_top"
            android:paddingBottom="@dimen/main_htp_header_text_padding_bottom"
            android:text="@string/hyderabad_traffic_live"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/main_htp_header_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/main_htp_logo_margin_top"
            android:contentDescription="@null"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_htp_logo_margin_top"
            android:gravity="center"
            android:paddingTop="@dimen/main_for_u_with_u_always_text_padding_top"
            android:paddingBottom="@dimen/main_for_u_with_u_always_text_padding_bottom"
            android:text="@string/for_you_with_you_always"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/main_for_u_with_u_always_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_english"
                android:layout_width="@dimen/main_btn_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_htp_logo_margin_top"
                android:background="@drawable/button_style_round"
                android:text="@string/language_english"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/main_btn_text_size"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btn_telugu"
                android:layout_width="@dimen/main_btn_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_htp_logo_margin_top"
                android:layout_marginBottom="@dimen/main_htp_logo_margin_top"
                android:background="@drawable/button_style_round"
                android:text="@string/language_telugu"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/main_btn_text_size"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>