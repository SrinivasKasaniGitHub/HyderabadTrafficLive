<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_tr_officers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBtns"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_contact"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_traffic_officer" />

    <LinearLayout
        android:id="@+id/lnr_name_cadre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/img_contact"
        android:layout_toRightOf="@id/img_contact"
        android:layout_toLeftOf="@id/img_call_btn"
        android:layout_toStartOf="@id/img_call_btn"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/traffic_cell"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/tv_cadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_phone_no"
            android:textColor="@color/colorWhite"
            tools:ignore="RelativeOverlap" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_call_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_call_btn" />

</RelativeLayout>