<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/splash_htp_header_text_padding_top"
            android:paddingBottom="@dimen/splash_htp_header_text_padding_bottom"
            android:text="@string/hyderabad_traffic_live"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/splash_htp_header_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/splash_htp_logo_margin_top"
            android:contentDescription="@null"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/splash_htp_logo_margin_top"
            android:gravity="center"
            android:paddingTop="@dimen/splash_for_u_with_u_always_text_padding_top"
            android:paddingBottom="@dimen/splash_for_u_with_u_always_text_padding_top"
            android:text="@string/for_you_with_you_always"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/splash_for_u_with_u_always_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>